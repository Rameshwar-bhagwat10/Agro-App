<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Internet permission (already present) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/agroapplogo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/agroapplogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectSection"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity" android:exported="false" />
        <activity android:name=".HomeActivity" android:exported="false" />
        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".ProductsActivity" android:exported="false" />
        <activity android:name=".ProductDetailsActivity" android:exported="false" />
        <activity android:name=".TipsActivity" android:exported="false" />
        <activity android:name=".TipDetailsActivity" android:exported="false" />
        <activity android:name=".FirebaseTestActivity" android:exported="false" />
        
        <!-- Admin Activities -->
        <activity
            android:name=".EditProfileActivity"
            android:exported="false" />
        <activity android:name=".admin.AdminLoginActivity" android:exported="false" />
        <activity android:name=".admin.AdminDashboardActivity" android:exported="false" />
        <activity android:name=".admin.UserManagementActivity" android:exported="false" />
        <activity android:name=".admin.UserDetailsActivity" android:exported="false" />
        <activity android:name=".admin.AddEditUserActivity" android:exported="false" />
        <activity android:name=".admin.ProductManagementActivity" android:exported="false" />
        <activity android:name=".admin.AddEditProductActivity" android:exported="false" />
        <activity android:name=".admin.TipsManagementActivity" android:exported="false" />
        <activity android:name=".admin.AddEditTipActivity" android:exported="false" />
        <activity android:name=".admin.AnalyticsActivity" android:exported="false" />
        <activity android:name=".admin.SystemSettingsActivity" android:exported="false" />

    </application>
</manifest>

