<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/detail_tip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:layout_marginBottom="8dp"
            tools:text="Full Tip Title Goes Here" />

        <TextView
            android:id="@+id/detail_tip_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceCaption"
            android:layout_marginBottom="16dp"
            tools:text="Category" />

        <TextView
            android:id="@+id/detail_tip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:lineSpacingMultiplier="1.2"
            tools:text="This is the full, detailed content of the farming tip. It can be multiple paragraphs long and provides all the necessary information for the user to understand and apply the advice provided." />

    </LinearLayout>
</ScrollView>
